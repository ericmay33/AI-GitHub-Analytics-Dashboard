// ------------------------------------------------------
// Prisma Schema for AI GitHub Analytics Dashboard
// PostgreSQL
// ------------------------------------------------------

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ------------------------------------------------------
// ENUMS
// ------------------------------------------------------

enum EntityType {
  PR
  REPO
  WEEKLY
}

// ------------------------------------------------------
// MODELS
// ------------------------------------------------------

// ---------------------
// User (Optional for later auth)
// ---------------------
model User {
  id          String        @id @default(uuid())
  email       String        @unique
  name        String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  repositories Repository[]
}

// ---------------------
// Repository
// ---------------------
model Repository {
  id             String          @id @default(uuid())
  githubId       Int             @unique
  owner          String
  name           String
  fullName       String          @unique
  htmlUrl        String
  defaultBranch  String?
  lastSyncedAt   DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  // Optional ownership for multi-user system
  userId         String?
  user           User?           @relation(fields: [userId], references: [id])

  commits        Commit[]
  pullRequests   PullRequest[]
  issues         Issue[]
  metricsDaily   MetricsDaily[]
  contributorRepos ContributorRepo[]
  aiSummaries AISummary[]
}

// ---------------------
// Contributor
// ---------------------
model Contributor {
  id        String           @id @default(uuid())
  githubId  Int              @unique
  login     String
  avatarUrl String?
  htmlUrl   String?
  createdAt DateTime          @default(now())

  commits      Commit[]
  pullRequests PullRequest[]
  issues       Issue[]
  contributorRepos ContributorRepo[]
}

// ---------------------
// Contributor <-> Repository (Join Table)
// ---------------------
model ContributorRepo {
  id            String      @id @default(uuid())
  contributorId String
  repoId        String

  contributor   Contributor @relation(fields: [contributorId], references: [id])
  repository    Repository  @relation(fields: [repoId], references: [id])

  @@unique([contributorId, repoId])  // Prevent duplicates
}

// ---------------------
// Commit
// ---------------------
model Commit {
  id            String        @id @default(uuid())
  sha           String        @unique
  message       String?
  additions     Int?
  deletions     Int?
  totalChanges  Int?
  committedAt   DateTime

  repoId        String
  contributorId String?

  repository    Repository    @relation(fields: [repoId], references: [id])
  contributor   Contributor?  @relation(fields: [contributorId], references: [id])

  @@index([repoId])
  @@index([committedAt])
}

// ---------------------
// Pull Request
// ---------------------
model PullRequest {
  id            String        @id @default(uuid())
  number        Int
  title         String
  body          String?
  state         String
  additions     Int?
  deletions     Int?
  changedFiles  Int?
  createdAt     DateTime
  mergedAt      DateTime?
  closedAt      DateTime?

  repoId        String
  contributorId String?

  repository    Repository    @relation(fields: [repoId], references: [id])
  contributor   Contributor?  @relation(fields: [contributorId], references: [id])

  aiSummary     AISummary?

  @@unique([repoId, number])
  @@index([repoId])
  @@index([createdAt])
}

// ---------------------
// Issue
// ---------------------
model Issue {
  id            String        @id @default(uuid())
  number        Int
  title         String
  body          String?
  state         String
  createdAt     DateTime
  closedAt      DateTime?

  repoId        String
  contributorId String?

  repository    Repository    @relation(fields: [repoId], references: [id])
  contributor   Contributor?  @relation(fields: [contributorId], references: [id])

  @@unique([repoId, number])
  @@index([repoId])
  @@index([createdAt])
}

// ---------------------
// Daily Metrics
// ---------------------
model MetricsDaily {
  id            String       @id @default(uuid())
  day           DateTime
  commitsCount  Int          @default(0)
  prsOpened     Int          @default(0)
  prsMerged     Int          @default(0)
  issuesOpened  Int          @default(0)
  issuesClosed  Int          @default(0)
  linesAdded    Int          @default(0)
  linesDeleted  Int          @default(0)
  anomalies     Json?

  repoId        String
  repository    Repository   @relation(fields: [repoId], references: [id])

  @@unique([repoId, day])
  @@index([repoId])
  @@index([day])
}

// ---------------------
// AI Summary
// ---------------------
model AISummary {
  id          String      @id @default(uuid())
  entityType  EntityType
  summary     String
  metadata    Json?
  createdAt   DateTime    @default(now())

  prId        String?     @unique
  repoId      String?

  pullRequest PullRequest? @relation(fields: [prId], references: [id])
  repository  Repository?  @relation(fields: [repoId], references: [id])

  @@index([entityType])
}

